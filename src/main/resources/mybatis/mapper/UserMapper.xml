<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.flab.helpu.domain.user.dao.UserMapper">

  <insert id="insertUser" parameterType="com.flab.helpu.domain.user.User" keyProperty="idx"
    useGeneratedKeys="true">
    INSERT INTO users
    (user_id, password, email, user_phone_number, nickname, created_by, updated_by)
    VALUES (#{userId}, #{password}, #{email}, #{userPhoneNumber}, #{nickname}, #{createdBy},
            #{updatedBy})
  </insert>

  <select id="findUserByIdx" parameterType="Long" resultType="com.flab.helpu.domain.user.User">
    SELECT *
    FROM users
    WHERE idx = #{idx}
  </select>

  <select id="findUserByUserId" parameterType="String" resultType="com.flab.helpu.domain.user.User">
    SELECT *
    FROM users
    WHERE user_id = #{userId}
  </select>

  <select id="findUserByNickname" parameterType="String"
    resultType="com.flab.helpu.domain.user.User">
    SELECT *
    FROM users
    WHERE nickname = #{nickname}
  </select>

  <select id="findAll" parameterType="String"
    resultType="com.flab.helpu.domain.user.User">
    SELECT *
    FROM users
  </select>
</mapper>